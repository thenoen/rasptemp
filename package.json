{
  "name": "rasptemp-client",
  "version": "v0.0.1",
  "description": "rasp temp app frontend",
  "license": "Apache-2.0",
  "repository": "TBD",
  "scripts": {
    "tsc:w": "tsc:w"
  },
  "dependencies": {
    "systemjs": "0.19.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.35.0",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "^0.6.12",
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4"

  },
  "devDependencies": {
    "gulp": "gulpjs/gulp#4.0",
    "gulp-inline-ng2-template": "0.0.10",
    "gulp-load-plugins": "1.1.0",
    "gulp-rename": "1.2.2",
    "gulp-typescript": "2.10.0",
    "gulp-uglify": "1.5.1",
    "typescript": "1.8.0-dev.20151204",
    "rimraf": "2.5.2"
  },
  "scripts": {
    "clean": "npm cache clean && rimraf node node_modules doc typings coverage ./src/main/resources/static/*",
    "clean:dist": "rimraf ./src/main/resources/static/*",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm install",
    "preclean:start": "npm run clean",
    "clean:start": "npm start",
    "watch": "npm run watch:dev",
    "watch:dev": "webpack --watch --config ./config/webpack.dev.config.js --progress --profile --colors --display-error-details --display-cached",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "watch:prod": "webpack --watch --config ./config/webpack.prod.config.js --progress --profile --colors --display-error-details --display-cached",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean:dist",
    "build:dev": "webpack --config ./config/webpack.dev.config.js --progress --profile --colors --display-error-details --display-cached --bail",
    "prebuild:prod": "npm run clean:dist",
    "build:prod": "webpack --config ./config/webpack.prod.config.js --profile --colors --display-error-details --display-cached  --bail",
    "server": "npm run server:dev",
    "server:dev": "webpack-dev-server --config ./config/webpack.dev.config.js --hot --inline --progress --profile --colors --watch --display-error-details --display-cached ",
    "webdriver:update": "webdriver-manager update",
    "webdriver:start": "webdriver-manager start",
    "lint": "tslint --force -t prose \"./src/main/frontend/**/*.ts\"",
    "pree2e": "npm run webdriver:update -- --standalone",
    "e2e": "protractor ./config/protractor.conf.js",
    "e2e:live": "protractor --elementExplorer ./config/protractor.conf.js",
    "test": "karma start ./config/karma.conf.js",
    "ci": "npm run test && npm run e2e",
    "docs": "typedoc --options typedoc.json --exclude \"**/*.spec.ts\" \"./src/main/frontend/\"",
    "start": "npm run server:dev",
    "typings-install": "typings install",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "ncu": "ncu -a",
    "tsc": "tsc"
  }
}
